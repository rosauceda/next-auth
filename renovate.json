{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    ":preserveSemverRanges"
  ],
  "labels": ["dependencies"],
  "assignees": [],
  "reviewers": [],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "schedule": ["before 5am on monday"],
  "timezone": "UTC",
  "ignoreDeps": [],
  "packageRules": [
    {
      "description": "Automerge minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "description": "Group ESLint packages",
      "groupName": "ESLint packages",
      "matchPackagePatterns": ["^eslint", "^@eslint/", "eslint-plugin"],
      "automerge": false
    },
    {
      "description": "Group TypeScript packages",
      "groupName": "TypeScript packages",
      "matchPackagePatterns": ["^typescript", "^@typescript-eslint/"],
      "automerge": false
    },
    {
      "description": "Group testing packages",
      "groupName": "Testing packages",
      "matchPackagePatterns": [
        "^vitest",
        "^@vitest/",
        "^playwright",
        "^@playwright/"
      ],
      "automerge": false
    },
    {
      "description": "Group Auth.js packages",
      "groupName": "Auth.js packages",
      "matchPackagePatterns": ["^@auth/", "^next-auth"],
      "automerge": false
    },
    {
      "description": "Require approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true,
      "labels": ["dependencies", "major"]
    },
    {
      "description": "Pin GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "pinDigests": true
    },
    {
      "description": "Separate security updates",
      "matchDatasources": ["npm"],
      "vulnerabilityAlerts": {
        "labels": ["security", "dependencies"],
        "assignees": []
      }
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "dependencies"]
  }
}
